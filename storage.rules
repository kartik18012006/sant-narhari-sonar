rules_version = '2';
// Firebase Storage rules â€” deploy with: firebase deploy --only storage
// Authenticated users can upload/read under their paths (e.g. social_workers/{userId}/...)
service firebase.storage {
  match /b/{bucket}/o {
    match /social_workers/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /profile_photos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /matrimony/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
